  <template name="defp" value="# $DESCRIPTION$&#10;def $METHOD_NAME$&#10;  $END$&#10;end" description="public instance method" toReformat="true" toShortenFQNames="true">
    <variable name="DESCRIPTION" expression="&quot;describe your method&quot;" defaultValue="" alwaysStopAt="true" />
    <variable name="METHOD_NAME" expression="&quot;method_name&quot;" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="false" />
      <option name="XML" value="false" />
      <option name="RUBY" value="true" />
    </context>
  </template>
  <template name="clp" value="# $DESCRIPTION$&#10;class $CLASS_NAME$&#10;  $SELECTION$$END$&#10;end # $CLASS_NAME$" description="public class" toReformat="true" toShortenFQNames="true">
    <variable name="DESCRIPTION" expression="&quot;What does this class represent?&quot;" defaultValue="" alwaysStopAt="true" />
    <variable name="CLASS_NAME" expression="&quot;class_name&quot;" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="false" />
      <option name="XML" value="false" />
