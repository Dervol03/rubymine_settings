  <template name="defc" value="def self.$METHOD_NAME$&#10;  $END$&#10;end" description="Class method" toReformat="true" toShortenFQNames="true">
    <variable name="METHOD_NAME" expression="&quot;method_name&quot;" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="false" />
      <option name="XML" value="false" />
      <option name="RUBY" value="true" />
