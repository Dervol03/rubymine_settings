  <template name="md" value="File.open(&quot;$PATH_TO_FILE$.dump&quot;, &quot;w&quot;) { |$FILE$| Marshal.dump($OBJ$, $FILE$) }" description="Marshal dump" toReformat="true" toShortenFQNames="true">
    <variable name="PATH_TO_FILE" expression="&quot;path_file&quot;" defaultValue="" alwaysStopAt="true" />
    <variable name="FILE" expression="&quot;file&quot;" defaultValue="" alwaysStopAt="true" />
    <variable name="OBJ" expression="&quot;object&quot;" defaultValue="" alwaysStopAt="true" />
    <context />
