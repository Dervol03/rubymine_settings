    <variable name="ELEMENT" expression="&quot;item&quot;" defaultValue="" alwaysStopAt="true" />
    <context />
  </template>
  <template name="req" value="require '$E$'" description="require" toReformat="true" toShortenFQNames="true">
    <variable name="E" expression="&quot;required_file&quot;" defaultValue="" alwaysStopAt="true" />
    <context />
  </template>
  <template name="scan" value="scan(/$PATTERN$/) { |$MATCH$| $END$ }" description="scan" toReformat="true" toShortenFQNames="true">
    <variable name="PATTERN" expression="&quot;pattern&quot;" defaultValue="" alwaysStopAt="true" />
