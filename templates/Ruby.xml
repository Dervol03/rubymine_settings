    <context />
  </template>
  <template name="ea" value="each { |$E$| $END$ }" description="each" toReformat="true" toShortenFQNames="true">
    <variable name="E" expression="&quot;item&quot;" defaultValue="" alwaysStopAt="true" />
    <context />
  </template>
  <template name="each" value="each do |$ELEMENT$|&#10;  $END$&#10;end  " description="each" toReformat="true" toShortenFQNames="true">
    <variable name="ELEMENT" expression="&quot;item&quot;" defaultValue="" alwaysStopAt="true" />
    <context />
